{% extends 'base.html.twig' %}

{% block title %} Gestion membre {% endblock %}

{% block body %}
<nav class="navbar navbar-expand-md navbar-dark bg-dark">
  <a class="navbar-brand" href="{{ path ('Admin.membre.index') }}">Membres</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

   <div class="collapse navbar-collapse" id="navbarsExampleDefault">
    <ul class="navbar-nav mr-auto">
       <li class="nav-item {% if current_menu is defined and current_menu == 'admin.activite'  %} active {% endif %}">
        <a class="nav-link" href="{{ path ('Admin.activite.indexe') }}">Activités</a>
       </li>
       <li class="nav-item {% if current_menu is defined and current_menu == 'admin.membre'  %} active {% endif %}">
        <a class="nav-link" href="{{ path ('Admin.property.index') }}">Evénements</a>
       </li>
    </ul>
  
  </div>
</nav>
<div class="container">
 <h1>Gestion des Membres</h1>

    {% for message in app.flashes('success') %} 
    <div class="alert alert-success">
        {{ message }}
    </div>
    {% endfor %}

    <a href="{{ path('Admin.membre.new') }}" class="btn btn-primary">Ajouter</a>

 <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for membre in membres %}
            <tr>
                <td><a href="{{ path('Admin.membre.show', {id: membre.id}) }}">{{membre.name}}  </a>
                </td>
                <td>
                    <a href="{{ path('Admin.membre.edit', {id: membre.id}) }}" class="btn btn-secondary">Editer</a>
                    </td>
            </tr>
        {% endfor %}
        </tbody>
</table>

        {% endblock %}