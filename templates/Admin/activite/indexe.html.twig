{% extends 'base.html.twig' %}


{% block title %} Administration {% endblock %}

{% block body %}


<nav class="navbar navbar-expand-md navbar-dark bg-dark">
  <a class="navbar-brand" href="{{ path ('Admin.activite.indexe') }}">Activités</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

   <div class="collapse navbar-collapse" id="navbarsExampleDefault">
    <ul class="navbar-nav mr-auto">
       <li class="nav-item {% if current_menu is defined and current_menu == 'admin.activite'  %} active {% endif %}">
        <a class="nav-link" href="{{ path ('Admin.property.index') }}">Evénements</a>
       </li>
       <li class="nav-item {% if current_menu is defined and current_menu == 'admin.membre'  %} active {% endif %}">
        <a class="nav-link" href="{{ path ('Admin.membre.index') }}">Membres</a>
       </li>
    </ul>
  
  </div>
</nav>
<div class="container">
    <h1>Gérer les activités</h1>

    {% for message in app.flashes('success') %} 
    <div class="alert alert-success">
        {{ message }}
    </div>
    {% endfor %}

    {# <a href="{{ path('Admin.property.create') }}" class="btn btn-primary">Ajouter</a> #}

<table class="table table-striped">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for activite in activites %}
            <tr>
                <td>{{activite.title}}  
                </td>
                <td>
                    <a href="{{ path('Admin.activite.edite', {id: activite.id}) }}" class="btn btn-secondary">Editer</a>
                    </td>
            </tr>
        {% endfor %}
        </tbody>
</table>

        {% endblock %}